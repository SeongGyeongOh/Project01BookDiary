<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/click_recycler"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/sample"/>

    <TextView
        android:id="@+id/book_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="책 제목"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:layout_toRightOf="@id/bookCover"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        android:layout_alignTop="@id/bookCover"/>

    <TextView
        android:id="@+id/rev_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_title"
        android:layout_toRightOf="@id/bookCover"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="여기는 리뷰 제목칸"
        android:textColor="#ff000000"
        android:maxLines="5"/>

    <TextView
        android:id="@+id/rev_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rev_title"
        android:layout_toRightOf="@id/bookCover"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="여기는 리뷰 내용칸임"
        android:textColor="#ff000000"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성일자칸"
        android:textSize="12sp"
        android:layout_below="@id/btnDel"
        android:layout_alignParentRight="true"/>


